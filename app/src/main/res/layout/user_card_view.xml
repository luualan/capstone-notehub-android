<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_marginBottom="2dp">

    <!-- <ImageView
          android:layout_width="56dp"
          android:layout_height="56dp"
          android:src="@mipmap/ic_launcher_round"/>-->

    <!--     app:civ_border_color="#000"
       app:civ_border_width="2dp"-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_member_user_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/anime"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/group_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Name:"/>

        <TextView
            android:id="@+id/group_member_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Rank"/>
    </LinearLayout>

    <RelativeLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/group_member_join_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text="Date"/>

        <ImageView
            android:id="@+id/group_member_remove"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_below="@id/group_member_join_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="-4dp"
            android:src="@drawable/ic_remove" />

    </RelativeLayout>
</LinearLayout>