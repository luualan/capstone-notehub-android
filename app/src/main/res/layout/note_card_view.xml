<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp">

    <!--app:cardCornerRadius="4dp"-->

    <RelativeLayout
        android:id="@+id/action_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/image_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="340dp"
            android:src="@drawable/ic_favorite_star" />

        <ImageView
            android:id="@+id/image_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="240dp"
            android:src="@drawable/ic_comment" />

        <ImageView
            android:id="@+id/image_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="140dp"
            android:src="@drawable/ic_report_problem_black_24dp" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:maxEms="25"
            android:maxLines="1"
            android:text="University"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_university"
            android:layout_marginTop="-1dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:text="Course"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course"
            android:layout_marginTop="-2dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:text="Type"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_type"
            android:layout_marginTop="-2dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:text="Name"
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:numStars="5"
            android:scaleX=".7"
            android:scaleY=".7"
            android:theme="@style/RatingBar"
            android:transformPivotX="255dp"
            android:transformPivotY="0dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>