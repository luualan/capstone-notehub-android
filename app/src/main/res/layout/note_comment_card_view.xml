<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">

    <!--app:cardCornerRadius="4dp"-->

    <RelativeLayout
        android:id="@+id/action_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/note_user_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:padding="2dp"
            android:src="@drawable/anime" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/image_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="340dp"
            android:src="@drawable/ic_thumb_up" />

        <ImageView
            android:id="@+id/image_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="200dp"
            android:src="@drawable/ic_report_problem_black_24dp" />

        <TextView
            android:id="@+id/note_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxEms="28"
            android:maxLines="1"
            android:text="Username"
            android:layout_toEndOf="@id/note_user_img"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/note_user_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/note_user_img"
            android:layout_below="@id/note_username"
            android:maxEms="28"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginTop="0dp"
            android:textColor="@android:color/black"
            android:text="Description"
            android:textSize="15sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>